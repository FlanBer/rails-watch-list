<%= render "layouts/navbar" %>

<h1><%= @list.name %></h1>

<ul>
  <div class = card>
    <% @list.bookmarks.each do |bookmark| %>
      <li><%= bookmark.movie.title %>
        <%= bookmark.movie.overview %>
        <%= bookmark.movie.poster_url %>
        <%= bookmark.comment %>
        <%= link_to "Delete", bookmark_path(bookmark),
        data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </li>
    <% end %>
  </div>
</ul>
<%= link_to "Add a bookmark", new_list_bookmark_path(@list) %>
<%= link_to "Back to Watch List", lists_path %>
